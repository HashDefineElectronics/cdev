<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="symfony.application"
            class="Symfony\Component\Console\Application">
            <argument key="name">Creode Dev</argument>
            <argument key="version">1.0.0</argument>
            <call method="add">
                <argument type="service" id="cdev.backup_pull_command" />
            </call>
            <call method="add">
                <argument type="service" id="cdev.cdev_configure_command" />
            </call>
            <call method="add">
                <argument type="service" id="cdev.db_cleanse_command" />
            </call>
            <call method="add">
                <argument type="service" id="cdev.db_utf8_command" />
            </call>
            <call method="add">
                <argument type="service" id="cdev.docker_cleanup_command" />
            </call>
            <call method="add">
                <argument type="service" id="cdev.docker_nuke_command" />
            </call>
            <call method="add">
                <argument type="service" id="cdev.docker_setup_command" />
            </call>
            <call method="add">
                <argument type="service" id="cdev.docker_start_command" />
            </call>
            <call method="add">
                <argument type="service" id="cdev.docker_stop_command" />
            </call>
            <call method="add">
                <argument type="service" id="cdev.mage2_cache_clear_command" />
            </call>
        </service>

        <service id="cdev.docker_nuke_command" class="Creode\Cdev\Command\Docker\NukeCommand">
            <argument type="service" id="cdev.tool_docker" />
        </service>

        <service id="cdev.docker_setup_command" class="Creode\Cdev\Command\Docker\SetupCommand">
            <argument type="service" id="cdev.tool_docker" />
        </service>

        <service id="cdev.docker_start_command" class="Creode\Cdev\Command\Docker\StartCommand">
            <argument type="service" id="cdev.tool_docker" />
        </service>

        <service id="cdev.docker_stop_command" class="Creode\Cdev\Command\Docker\StopCommand">
            <argument type="service" id="cdev.tool_docker" />
        </service>

        <service id="cdev.docker_cleanup_command" class="Creode\Cdev\Command\Docker\CleanupCommand">
            <argument type="service" id="cdev.tool_docker" />
        </service>

        <service id="cdev.backup_pull_command" class="Creode\Cdev\Command\Backup\PullCommand">
            <argument type="service" id="cdev.config" />
            <argument type="service" id="cdev.ssh" />
        </service>

        <service id="cdev.db_cleanse_command" class="Creode\Cdev\Command\Backup\Db\CleanseCommand">
            <argument type="service" id="cdev.config" />
            <argument type="service" id="cdev.awk" />
        </service>

        <service id="cdev.db_utf8_command" class="Creode\Cdev\Command\Backup\Db\Utf8Command">
            <argument type="service" id="cdev.iconv" />
        </service>

        <service id="cdev.mage2_cache_clear_command" class="Creode\Cdev\Command\Magento2\CacheClearCommand">
            <argument type="service" id="cdev.tool_docker" />
        </service>

        <service id="cdev.cdev_configure_command"
            class="Creode\Cdev\Command\Cdev\ConfigureCommand">
        </service>

        <service id="cdev.tool_docker" class="Creode\Tools\Docker\Docker">
            <argument type="service" id="cdev.system_docker" />
            <argument type="service" id="cdev.system_docker_compose" />
            <argument type="service" id="cdev.system_docker_sync" />
            <argument type="service" id="cdev.system_composer" />
            <argument type="service" id="symfony.filesystem" />
            <argument type="service" id="symfony.finder" />
        </service>

        <service id="cdev.config"
            class="Creode\Cdev\Config">
            <argument type="service" id="symfony.console_output" />
        </service>

        <service id="cdev.system_docker"
            class="Creode\System\Docker\Docker">
        </service>

        <service id="cdev.system_docker_compose"
            class="Creode\System\Docker\Compose">
        </service>

        <service id="cdev.system_docker_sync"
            class="Creode\System\Docker\Sync">
        </service>

        <service id="cdev.system_composer"
            class="Creode\System\Composer\Composer">
        </service>

        <service id="cdev.logger" class="Symfony\Component\Console\Logger\ConsoleLogger">
            <argument type="service" id="symfony.console_output" />
        </service>

        <service id="cdev.ssh" class="Creode\System\Ssh\Ssh">
            <argument type="service" id="ssh.factory" />
            <argument type="service" id="cdev.config" />
        </service>

        <service id="ssh.factory"
            class="Creode\System\Ssh\Factory">
        </service>

        <service id="cdev.awk" class="Creode\System\Awk\Awk">
            <argument type="service" id="symfony.filesystem" />
        </service>

        <service id="cdev.sed"
            class="Creode\System\Sed\Sed">
        </service>

        <service id="cdev.iconv" class="Creode\System\Iconv\Iconv">
            <argument type="service" id="symfony.filesystem" />
        </service>

        <service id="symfony.console_output"
            class="Symfony\Component\Console\Output\ConsoleOutput">
        </service>

        <service id="symfony.filesystem"
            class="Symfony\Component\Filesystem\Filesystem">
        </service>

        <service id="symfony.finder"
            class="Symfony\Component\Finder\Finder">
        </service>
    </services>
</container>
